<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Document</title>
  </head>
  <body>
    <div>
      <h1>동적 폼 전송으로 파일 여러개 올리기</h1>
      <form onsubmit="fileupload(event)" >
        <input type="file" id="dynamic" multiple /><br />
        <button type="submit">업로드</button>
      </form>

      <br />
      <div class="result"></div>

      <script>
        const resultBox = document.querySelector(".result");
        async function fileupload(event) {
          event.preventDefault();
          console.log("file upload");
          const file = document.querySelector("#dynamic");
          console.log(file.files[0]);
          const formData = new FormData();

          for (let i = 0; i < file.files.length; i++) {
            formData.append("dynamic", file.files[i]);
          }

          console.log(formData.getAll("dynamic"))

          //formData.append("dynamic", file.files[0]);

          const res = await axios({
            method: "POST",
            url: "/dynamic/array",
            data: formData,
            headers: {
              "Content-Type": "multipart/form-data",
            },
          });
          console.log("res", res);
          resultBox.innerHTML = `<img src = ${res.data.path} >`;
        }
      </script>
    </div>
  </body>
</html>
